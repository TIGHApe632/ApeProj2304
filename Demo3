#include <stdio.h>

int main() {
    int num, sum, digit;

    // Input a four-digit integer
    printf("Enter a four-digit integer: ");
    scanf("%d", &num);

    sum = 0;

    // Extract and sum digits
    digit = num % 10;   // Get last digit
    sum += digit;
    num = num / 10;     // Remove last digit

    digit = num % 10;   
    sum += digit;
    num = num / 10;

    digit = num % 10;
    sum += digit;
    num = num / 10;

    digit = num % 10;
    sum += digit;

    // Print the sum of digits
    printf("Sum of the digits: %d\n", sum);

    return 0;
}
